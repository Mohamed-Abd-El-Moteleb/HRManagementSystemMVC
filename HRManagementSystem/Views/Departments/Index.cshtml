@model IEnumerable<HRManagementSystem.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Departments</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Department
        </a>
    </div>

    <div class="card shadow-sm border-0 w-100">
        <div class="card-body p-0 w-100">
            <div class="table-responsive w-100">
                <table class="table table-hover align-middle text-center mb-0 w-100">
                    <thead class="table-light text-center align-middle">
                        <tr>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.Description)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.Code)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th class="text-nowrap">Manager</th>
                            <th class="text-nowrap">Employees Count</th>
                            <th class="text-nowrap">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-nowrap">@item.Name</td>
                                <td class="text-nowrap">@item.Description</td>
                                <td class="text-nowrap">@item.Code</td>
                                <td class="text-center text-nowrap">
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                        @(item.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-nowrap">@item.Manager?.FullName</td>
                                <td class="text-center text-nowrap fw-semibold">
                                    @(item.Employees?.Count() ?? 0)
                                </td>
                                <td class="text-center text-nowrap">
                                    <div class="d-inline-flex gap-1">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">View</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white">Edit</a>
                                        @if (!item.Name.Equals("Unassigned", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary text-center mt-4">
            No departments found.
        </div>
    }
</div>
