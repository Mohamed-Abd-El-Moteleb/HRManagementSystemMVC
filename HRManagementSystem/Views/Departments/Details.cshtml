@model HRManagementSystem.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-5 mb-5">
    <div class="card border-0 shadow-sm rounded-3" style="max-width: 700px; margin: auto;">
        <div class="card-header bg-light text-center py-3 border-bottom">
            <h4 class="mb-0 text-secondary">Department Details</h4>
        </div>

        <div class="card-body bg-white p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold text-muted">Department Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Code</dt>
                <dd class="col-sm-8">@Model.Code</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Active Status</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </dd>

                <dt class="col-sm-4 fw-semibold text-muted">Manager</dt>
                <dd class="col-sm-8">@Model.Manager?.Email</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Number of Employees</dt>
                <dd class="col-sm-8">
                    @(Model.Employees?.Count() ?? 0)
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-light text-center py-3 border-top">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 me-2">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
        </div>
    </div>
</div>
