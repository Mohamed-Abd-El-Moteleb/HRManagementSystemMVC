@model IEnumerable<HRManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Employee Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Employee
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group shadow-sm">
            <input type="text" name="searchString" class="form-control form-control-lg" placeholder="Search employees..." value="@Context.Request.Query["searchString"]" />
            <button type="submit" class="btn btn-primary btn-lg">Search</button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Reset</a>
        </div>
    </form>

    <div class="card shadow-sm border-0 w-100">
        <div class="card-body p-0 w-100">
            <div class="table-responsive w-100">
                <table class="table table-hover align-middle text-center mb-0 w-100">
                    <thead class="table-light text-center align-middle">
                        <tr>
                            <th class="text-nowrap">Photo</th>
                            <th class="text-nowrap">Full Name</th>
                            <th class="text-nowrap">Gender</th>
                            <th class="text-nowrap">Email</th>
                            <th class="text-nowrap">Phone</th>
                            <th class="text-nowrap">Hire Date</th>
                            <th class="text-nowrap">Job Title</th>
                            <th class="text-nowrap">Salary</th>
                            <th class="text-nowrap">Department</th>
                            <th class="text-nowrap">Status</th>
                            <th class="text-nowrap">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-nowrap">
                                    @if (!string.IsNullOrEmpty(item.ProfileImagePath))
                                    {
                                        <img src="@item.ProfileImagePath" alt="Profile" width="40" height="40" class="rounded-circle border" />
                                    }
                                    else
                                    {
                                        <img src="/images/default-profile.png" alt="Profile" width="40" height="40" class="rounded-circle border" />
                                    }
                                </td>
                                <td class="text-nowrap">@item.FirstName @item.LastName</td>
                                <td class="text-nowrap">
                                    @if (item.Gender == "Male")
                                    {
                                        <span class="badge bg-primary">Male</span>
                                    }
                                    else if (item.Gender == "Female")
                                    {
                                        <span class="badge bg-pink text-white">Female</span>
                                    }
                                </td>
                                <td class="text-nowrap">@item.Email</td>
                                <td class="text-nowrap">@item.PhoneNumber</td>
                                <td class="text-nowrap">@item.HireDate.ToShortDateString()</td>
                                <td class="text-nowrap">@item.JobTitle</td>
                                <td class="text-nowrap">$@item.Salary</td>
                                <td class="text-nowrap">@item.Department?.Name</td>
                                <td class="text-nowrap">
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                        @(item.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-center text-nowrap">
                                    <div class="d-inline-flex gap-1">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">View</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
