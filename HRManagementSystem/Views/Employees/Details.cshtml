@model HRManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-5">
    <h2 class="text-primary text-center mb-4">Employee Details</h2>

    <div class="card shadow p-4">
        <div class="row">
            <!-- Image -->
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <img src="~/@Model.ProfileImagePath" alt="Profile Picture" class="img-fluid rounded-circle shadow-sm mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                }
                else
                {
                    <img src="~/images/default-profile.png" alt="No Image" class="img-fluid rounded-circle shadow-sm mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                }

                <h4 class="text-secondary">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">@Model.JobTitle</p>
                <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </div>

            <!-- Details -->
            <div class="col-md-8">
                <h5 class="text-secondary mb-3">Personal Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Phone Number</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">Date of Birth</dt>
                    <dd class="col-sm-8">@Model.DateOfBirth.ToShortDateString()</dd>

                    <dt class="col-sm-4">Gender</dt>
                    <dd class="col-sm-8">@Model.Gender</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.Address</dd>

                    <dt class="col-sm-4">National ID</dt>
                    <dd class="col-sm-8">@Model.NationalId</dd>
                </dl>

                <h5 class="text-secondary mt-4 mb-3">Job Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Hire Date</dt>
                    <dd class="col-sm-8">@Model.HireDate.ToShortDateString()</dd>

                    <dt class="col-sm-4">Salary</dt>
                    <dd class="col-sm-8">$@Model.Salary</dd>

                    <dt class="col-sm-4">Department</dt>
                    <dd class="col-sm-8">@Model.Department?.Name</dd>
                </dl>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        </div>
    </div>
</div>
